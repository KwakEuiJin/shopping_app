<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.part5_chapter2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Part5Chapter02Application"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Part5chapter2">
        <activity
            android:name=".presentation.detail.ProductDetailActivity"
            android:exported="false"
            android:theme="@style/AppTheme.PopupOverlay"/>
        <activity
            android:name=".presentation.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.BaseActivity" />
    </application>

</manifest>